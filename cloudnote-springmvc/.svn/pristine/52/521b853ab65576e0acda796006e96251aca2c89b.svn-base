      <property name="userDn" value="cn=Manager,dc=ces-domain,dc=com" />
      <property name="password" value="ces0909" />
   </bean>

   <bean id="ldapTemplate" class="org.springframework.ldap.core.LdapTemplate">
      <constructor-arg ref="contextSource" />
   </bean>
</beans>